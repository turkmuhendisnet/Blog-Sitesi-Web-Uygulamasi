@model IEnumerable<Blog_Sitesi.Models.KategoriModel>

@{
    ViewBag.Title = "Index";
}


<div>
    <h2 >Kategori Listesi</h2>
    <hr style="border-top:1px solid #8c8b8b;"/>
</div>


<div>
    <p style="margin-top:10px;">
        @Html.ActionLink("Yeni Katogori", "Create", null, new { @class = "btn btn-primary" })
    </p>
</div>

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th class="col-lg-8 col-md-8 ">
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th class="text-center col-lg-2 col-md-2">
            @Html.DisplayNameFor(model => model.BlogSayisi)
        </th>
        <th class="text-center col-lg-2 col-md-2">Araçlar</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAdi)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.BlogSayisi)
        </td>
        <td class="text-center">
            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
            @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" }) |
            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
