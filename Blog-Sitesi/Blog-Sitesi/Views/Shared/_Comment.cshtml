                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button class="btn btn-success btn-circle text-uppercase" id="submitComment"><span class="glyphicon glyphicon-send"></span> Gönder</button>
                            </div>
                        </div>
                    </form>
                    <div class="alert alert-success" hidden id="#MesajBasarili">
                        <p>Ekleme işlmi başarısız olmuştur.</p>
                    </div>
                    <div class="alert alert-danger" hidden id="#MesajBasarisiz">
                        <p>Ekleme işlemi başarısız olmuştur.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $('#submitComment').click(function () {

            var Yorum = JSON.stringify({
                'Name': $('#name').val(),
                'Surname': $('#surname').val(),
                'Comment': $('#addcomment').val()

            });

            $.ajax({

                url: "/Blog/AddCommentMethod",
                type: "POST",
                contentType: "aplication/json",
                success: function () { $('#MesajBasarili').show(); },
                error: function () { $('#MesajBasarisiz').show(); },
                dataType: "JSON",
                data: Yorum
            });
        });

    });

</script>











