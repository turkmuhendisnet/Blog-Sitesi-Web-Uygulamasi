@model IEnumerable<Blog_Sitesi.Models.Yorum>

<div class="row">
    <div class="col-sm-12 ">
        <div class="page-header">
            <h3 class="reviews">Yorumlar</h3>
        </div>
        <div class="comment-tabs">
            <ul class="nav nav-tabs" role="tablist">
                <li class="active"><a href="#comments-logout" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Yorumlar</h4></a></li>
                <li><a href="#add-comment" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Yorum Ekle</h4></a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="comments-logout">
                    <ul class="media-list">
                        <li class="media">
                            <a class="pull-left" href="#">
                                <img class="media-object img-circle" src="~/Pictures/Male.jpg" alt="profile">
                            </a>
                            <div class="media-body">
                                <div class="well well-lg">
                                    @foreach (var item in Model)
                                    {
                                        <h4 class="media-heading text-uppercase reviews">@item.Ad @item.Soyad</h4>
                                        <ul class="media-date text-uppercase reviews list-inline">
                                            <li class="dd">@item.YorumTarihi.ToShortDateString()</li>

                                        </ul>
                                        <p class="media-comment">
                                            @item.Mesaj
                                        </p>
                                    }
                                    @*<a class="btn btn-info btn-circle text-uppercase" href="#" id="reply"><span class="glyphicon glyphicon-share-alt"></span>Cevap</a>
                                        <a class="btn btn-warning btn-circle text-uppercase" data-toggle="collapse" href="#replyOne"><span class="glyphicon glyphicon-comment"></span> Yorumlar</a>*@
                                </div>
                            </div>
                            @*<div class="collapse" id="replyOne">
                                    <ul class="media-list">
                                        <li class="media media-replied">
                                            <a class="pull-left" href="#">
                                                <img class="media-object img-circle" src="https://s3.amazonaws.com/uifaces/faces/twitter/ManikRathee/128.jpg" alt="profile">
                                            </a>
                                            <div class="media-body">
                                                <div class="well well-lg">
                                                    <h4 class="media-heading text-uppercase reviews"><span class="glyphicon glyphicon-share-alt"></span> Kemal</h4>
                                                    <ul class="media-date text-uppercase reviews list-inline">
